@model IEnumerable<WebСourseProject.Models.Timetable>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Группа
        </th>
        <th>
            Период
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Group.number)
            -
            @Html.DisplayFor(modelItem => item.Group.letter)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Period.name)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id })
        </td>
    </tr>
}

</table>
