@model IEnumerable<WebСourseProject.Models.Timetable>
@{
    ViewBag.Title = "TimeTables";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<script>
    $(document).ready(function () {
        $("#showTimeTable").click(function () {
            var GroupId = $("#GroupId").val();
            var PeriodId = $("#PeriodId").val();
            for (var i = 1; i < 7; i++)
                for (var j = 1; j < 8; j++) {
                    $("[day = '" + i + "' ][lesson = '" + j + "']").html("");
                }
            $.post("/Home/getTimetable", { GroupId: GroupId, PeriodId: PeriodId }, function (data) {
                for (var i = 0; i < data.length; i++) {
                    $("[day = " + data[i].day + " ][lesson = " + data[i].number + "]").html(
                        "<span> " + data[i].name + "</span><br>" +
                        "<span> " + data[i].TeachersName + "</span>");
                }
            });
        });
        })
       
</script>
<br />
    <div class="form-inline">
        <div class="form-group">
            <label for="GroupId">Группа</label>
            @Html.DropDownList("GroupId", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label for="PeriodId">Выберите период</label>
            @Html.DropDownList("PeriodId", null, htmlAttributes: new { @class = "form-control" })
        </div>
        <button class="btn btn-success" id="showTimeTable">Показать</button>
    </div>
